    </div>


    <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.State, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.State)
                </div>
            </div>
